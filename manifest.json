{
  "name": "Moody",
  "version": "1.1",
  "description": "A chrome extension that will add any gif that you want according to your mood as a background to your web page!",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  }
}
